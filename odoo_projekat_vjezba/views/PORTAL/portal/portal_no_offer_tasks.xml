<odoo>
  <template id="portal_my_tasks_template" name="Moji Zadaci - Portal">
    <t t-call="portal.portal_layout">
      <div class="container mt16 mb16">
        <h1>Zadaci bez ponude</h1>
        <t t-if="tasks">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Ime zadatka</th>
                <th>Bud≈æet</th>
                <th>Planirani datum</th>
                <th>Ponude</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach="tasks" t-as="task">
                <tr>
                  <td><t t-esc="task.name"/></td>
                  <td><t t-esc="task.budget"/></td>
                  <td><t t-esc="task.planned_date"/></td>
                  <td><t t-esc="task.offer_count"/></td>
                  
                </tr>
              </t>
            </tbody>
          </table>
        </t>
        <t t-else="">
          <p>Niste dali nijednu ponudu.</p>
        </t>
      </div>
    </t>
  </template>
</odoo>
