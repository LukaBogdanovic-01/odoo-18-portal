<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data noupdate="0">
    <template id="website_dokumenti" name="Portal Dokumenti">
      <t t-call="portal.portal_layout">
        <div id="wrap" class="custom_structure">
          <section class="custom_tabs pt48 pb48 o_colored_level"
                   data-vcss="001" data-snippet="custom_tabs" data-name="Tabs"
                   style="background-image: none;" id="Tabs" data-anchor="true">
            <div class="container">
              <div class="custom_tabs_main">

                <!-- Navigacija -->
                <div class="custom_tabs_nav mb-3">
                  <ul class="nav nav-pills" role="tablist">
                    <li class="nav-item">
                      <a class="nav-link active" id="nav_tabs_link_info" data-bs-toggle="tab"
                         href="#nav_tabs_content_info" role="tab">Info tabla</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" id="nav_tabs_link_offers" data-bs-toggle="tab"
                         href="#nav_tabs_content_offers" role="tab">Ponude</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" id="nav_tabs_link_contracts" data-bs-toggle="tab"
                         href="#nav_tabs_content_contracts" role="tab">Ugovori</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" id="nav_tabs_link_projects" data-bs-toggle="tab"
                         href="#nav_tabs_content_projects" role="tab">Projekti</a>
                    </li>
                  </ul>
                </div>

                <!-- SadrÅ¾aj tabova -->
                <div class="tab-content">
                  <div class="tab-pane fade active show" id="nav_tabs_content_info" role="tabpanel">
                    <t t-call="odoo_projekat_vjezba.portal_info_tabla_content">
                      <t t-set="notifications" t-value="notifications"/>
                      <t t-set="messages" t-value="messages"/>
                      <t t-set="users" t-value="users"/>
                    </t>
                  </div>

                  <div class="tab-pane fade" id="nav_tabs_content_offers" role="tabpanel">
                    <t t-call="odoo_projekat_vjezba.portal_my_offers_content">
                      <t t-set="offers" t-value="offers"/>
                    </t>
                  </div>

                  <div class="tab-pane fade" id="nav_tabs_content_contracts" role="tabpanel">
                    <t t-call="odoo_projekat_vjezba.portal_my_contracts_content">
                      <t t-set="contracts" t-value="contracts"/>
                    </t>
                  </div>

                  <div class="tab-pane fade" id="nav_tabs_content_projects" role="tabpanel">
                    <t t-call="odoo_projekat_vjezba.portal_my_projects_content">
                      <t t-set="projects" t-value="projects"/>
                      <t t-set="contractor_map" t-value="contractor_map"/>
                      <t t-set="show_mine" t-value="show_mine"/>
                      <t t-set="show_access_denied_modal" t-value="show_access_denied_modal"/>
                    </t>
                  </div>
                </div>

              </div>
            </div>
          </section>
        </div>
      </t>
    </template>
  </data>
</odoo>
