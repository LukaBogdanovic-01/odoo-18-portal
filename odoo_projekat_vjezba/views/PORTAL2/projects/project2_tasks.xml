<odoo>
  <!-- FORM VIEW -->
  <record id="view2_task_form_inherit_offers" model="ir.ui.view">
      <field name="name">project.task.form.inherit.offers</field>
      <field name="model">project.task</field>
      <field name="inherit_id" ref="project.view_task_form2"/>
      <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_view_task_offers" type="object" string="Pregledaj ponude" class="oe_stat_button" icon="fa-list">
                    <field name="offer_ids" widget="statinfo"/>
                </button>
            </xpath>
            <xpath expr="//sheet//group" position="inside">
                <group>
                    <field name="budget"/>
                    <field name="planned_date"/>
                    <field name="contract_id" widget="many2one"/>
                </group>
            </xpath>
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Dokumenti">
                    <field name="attachment_ids" widget="attachments" options="{'res_model': 'project.task'}"/>
                </page>
            </xpath>
      </field>
  </record>

  <!-- TREE VIEW -->
    <record id="view2_task_tree_inherit_offers" model="ir.ui.view">
        <field name="name">project.task.list.inherit.offers</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="budget"/>
                <field name="planned_date"/>
                <field name="contract_id"/>
                <field name="offer_count"/>
            </xpath>
        </field>
    </record>

  <record id="project2_task_action" model="ir.actions.act_window">
      <field name="name">Project tasks</field>
      <field name="res_model">project.task</field>
      <field name="view_mode">list,form</field>
      <field name="view_id" ref="view2_task_tree_inherit_offers"/>
  </record>
</odoo>
