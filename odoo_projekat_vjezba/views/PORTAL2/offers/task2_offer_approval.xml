<odoo>
    <record id="view2_offer_approval_form" model="ir.ui.view">
        <field name="name">offer.approval.form</field>
        <field name="model">offer.approval</field>
        <field name="arch" type="xml">
            <form string="Approval">
                <header>
                    <button name="action_approve"
                            type="object"
                            string="Approve"
                            class="btn-primary"
                            invisible="state != 'pending'"/>
                    <button name="action_reject"
                            type="object"
                            string="Reject"
                            class="btn-secondary"
                            invisible="state != 'pending'"/>
                </header>

                <sheet>
                    <group>
                        <field name="offer_id"/>
                        <field name="approver_id"/>
                        <field name="state"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action2_offer_approvals" model="ir.actions.act_window">
        <field name="name">Offer Approvals</field>
        <field name="res_model">offer.approval</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>
</odoo>
