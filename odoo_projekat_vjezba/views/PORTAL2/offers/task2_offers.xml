<odoo>
    <!-- TREE VIEW -->
    <record id="task2_offer_tree_view_backend" model="ir.ui.view">
        <field name="name">task_offer.list.backend</field>
        <field name="model">task.offer</field>
        <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="task_id"/>
                <field name="team_id"/>
                <field name="price"/>
                <field name="deadline"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="task2_offer_form_view" model="ir.ui.view">
        <field name="name">task_offer.form</field>
        <field name="model">task.offer</field>
        <field name="arch" type="xml">
            <form string="Task Offer">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="task_id"/>
                        <field name="team_id"/>
                        <field name="price"/>
                        <field name="deadline"/>
                    </group>

                    <field name="approval_ids" readonly="1">
                        <list string="Odobrenja" editable="bottom" create="false" delete="false">
                            <field name="approver_id"/>
                            <field name="state"/>
                            <field name="note"/>
                        </list>
                    </field>



                    <field name="approval_status" widget="badge" readonly="1"/>
                    <field name="agreement_template" filename="agreement_template_filename"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="task2_offer_action" model="ir.actions.act_window">
        <field name="name">Task Offers</field>
        <field name="res_model">task.offer</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>
</odoo>
